%h1 Edit Account Settings
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
  = display_base_errors resource
  = f.error_notification 
  = f.input :name, disabled: true
  = f.input :email, :required => true
  .inline-field
    = f.input :password, :label => 'New Password', :autocomplete => "off", :required => false 
  = f.input :password_confirmation, :label => 'New Password Confirmation', :required => false 
  = f.input :current_password, :label => 'Current Password', :required => true, :hint => "We need your current password to confirm your changes"
  = f.button :submit, 'Save Changes', :class => 'btn btn-primary' 
%p 
  Unhappy? 
  = link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete
= link_to "Back", :back
