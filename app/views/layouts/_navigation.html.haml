.brand
  %i{:class=>"icon-globe icon-large"}
= link_to "OneTeam", root_path, :class => 'brand'
%a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
.nav-collapse.collapse
  - if user_signed_in?
    %ul.nav
      %li
        = link_to "All Requests", requests_path
      %li
        = link_to "New Request", new_request_path
      %li
        = link_to "My Requests", my_requests_path 
    %ul.nav.pull-right
      - if current_user.has_role? :admin
        %li
          = link_to "Dashboard", dashboard_path
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", "data-target" => "#", :href => "#"}
          %i.icon-cog.icon-2x
        %ul.dropdown-menu
          %li
            = link_to "View Profile", user_path(current_user.id)
          %li 
            = link_to "Edit Profile", edit_user_path(current_user.id)
          %li
            = link_to "Edit Account Settings", edit_user_registration_path
          %li
            = link_to 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %ul.nav.pull-right
      %li
        = link_to 'Login', new_user_session_path
      %li
        = link_to 'Sign up', new_user_registration_path